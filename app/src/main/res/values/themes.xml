<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DefaultWithActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>
    <style name="Theme.DefaultWithoutActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/brown</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorAccent">@color/orange</item>
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.DefaultWithoutActionBar">
        <item name="android:windowBackground">@color/brown</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/brown</item>
    </style>
    <style name="Theme.Login" parent="Theme.DefaultWithoutActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/defaultWhite</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/brown</item>
    </style>
    <style name="Theme.Home" parent="Theme.DefaultWithoutActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/brown</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/defaultWhite</item>
    </style>
    <style name="Theme.Settings" parent="Theme.DefaultWithActionBar">
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/defaultWhite</item>
    </style>
    <style name="Theme.Course" parent="Theme.DefaultWithoutActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/brown</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/defaultWhite</item>
    </style>
    <style name="Theme.Chapter" parent="Theme.DefaultWithoutActionBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/brown</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/defaultWhite</item>
    </style>
</resources>