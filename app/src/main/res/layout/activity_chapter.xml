<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:theme="@style/Theme.DefaultWithActionBar"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/brown"
            android:id="@+id/fl_header">

            <TextView
                android:id="@+id/tv_chapter"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Chapitre"
                android:textSize="25sp"
                android:textColor="@color/defaultWhite"
                android:transitionName="tv_chapterName"
                android:textAlignment="center"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/iv_wave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/fl_header"
            android:src="@drawable/ic_chapterwave"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40dp"
            android:layout_below="@+id/iv_wave"
            android:orientation="vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider les rÃ©ponses"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_items"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:onClick="onButtonClick"/>

    </RelativeLayout>

</ScrollView>