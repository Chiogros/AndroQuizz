<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultatActivity">

    <TextView
        android:id="@+id/message_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/resultat"
        android:gravity="center"/>

    <Button
        android:id="@+id/Correction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/corriger_autre_table"
        android:layout_gravity="center"
        android:onClick="CorrectionValider"/>
    <Button
        android:id="@+id/autre_Exo_Table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Choix_exercice"
        android:layout_gravity="center"
        android:onClick="ExoTableValider"/>

</LinearLayout>